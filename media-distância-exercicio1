programa
{
	
	funcao inicio()
	{
		cadeia resposta
		escreva("Olá! Vamos calcular quanto é o consumo do seu veículo. \nVocê sabe informar quantos Km/L o seu veículo faz?")
		leia (resposta)
		se (resposta=="sim")
		{
			real kml, tanque
			escreva("Informe quantos Km/L o seu veículo consome?")
			leia(kml)
			escreva("Informe quantos litros de combustível o seu veículo tem?")
			leia(tanque)
			escreva("Com o tanque totalmente abastecido o seu veículo percorre a distância de ",kml*tanque, "Km")
			retorne
		}
			se (resposta=="nao")
			{
				real tanque, km, litros, kml
				escreva("Informe quantos litros de combustível o seu tanque tem? ")
				leia(tanque)
				escreva("Com o tanque cheio rode uma certa quilometragem e reabasteça o veículo\nInforme quantos km você dirigiu antes de reabastecer. ")
				leia(km)
				escreva("Quantos litros você reabasteceu? ")
				leia(litros)
				kml=km/litros
				escreva("O consumo médio de seu veículo é ",kml,"km, e a distância total percorrida com um tanque de combustível cheio é de ",kml*tanque,"km")
			}
		
		
		
		
		
	}
}
